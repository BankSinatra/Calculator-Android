<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/inputLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text=""
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:textSize="61sp"
        app:layout_constraintBottom_toTopOf="@id/evalLine"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.202"
        tools:text="51+51" />

    <TextView
        android:id="@+id/evalLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text=""
        android:textAlignment="textEnd"
        android:textColor="#5B5B5B"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/buttonMatrix"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inputLine"
        tools:text="102" />

    <LinearLayout
        android:id="@+id/buttonMatrix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/evalLine">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/btn_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:width="88dp"
                android:height="88dp"
                android:background="@drawable/btnclear"
                android:fontFamily="@font/montserrat"
                android:text="@string/clear_button"
                android:textSize="25sp" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:width="88dp"
                android:height="88dp"
                android:background="@drawable/btndel"
                android:fontFamily="@font/montserrat"
                android:text="@string/delete_button"
                android:textSize="25sp" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/btn_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:width="88dp"
                android:height="88dp"
                android:background="@drawable/btnop"
                android:fontFamily="@font/montserrat"
                android:text="@string/percent_button"
                android:textSize="25sp" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/btn_divide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:width="88dp"
                android:height="88dp"
                android:background="@drawable/btnop"
                android:fontFamily="@font/montserrat"
                android:text="@string/division"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/btn_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:width="88dp"
                android:height="88dp"
                android:background="@drawable/btnnumber"
                android:fontFamily="@font/montserrat"
                android:text="@string/seven_button"
                android:textSize="40sp" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/btn_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:width="88dp"
                android:height="88dp"
                android:background="@drawable/btnnumber"
                android:fontFamily="@font/montserrat"
                android:text="@string/eight_button"
                android:textSize="40sp" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/btn_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:width="88dp"
                android:height="88dp"
                android:background="@drawable/btnnumber"
                android:fontFamily="@font/montserrat"
                android:text="@string/nine_button"
                android:textSize="40sp" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/btn_multiplication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:width="88dp"
                android:height="88dp"
                android:background="@drawable/btnop"
                android:fontFamily="@font/montserrat"
                android:text="@string/multiplication"
                android:textSize="40sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/btn_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:width="88dp"
                android:height="88dp"
                android:background="@drawable/btnnumber"
                android:fontFamily="@font/montserrat"
                android:text="@string/four_button"
                android:textSize="40sp" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/btn_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:width="88dp"
                android:height="88dp"
                android:background="@drawable/btnnumber"
                android:fontFamily="@font/montserrat"
                android:text="@string/five_button"
                android:textSize="40sp" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/btn_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:width="88dp"
                android:height="88dp"
                android:background="@drawable/btnnumber"
                android:fontFamily="@font/montserrat"
                android:text="@string/six_button"
                android:textSize="40sp" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/btn_subtract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:width="88dp"
                android:height="88dp"
                android:background="@drawable/btnop"
                android:fontFamily="@font/montserrat"
                android:text="@string/minus"
                android:textSize="40sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/btn_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:width="88dp"
                android:height="88dp"
                android:background="@drawable/btnnumber"
                android:fontFamily="@font/montserrat"
                android:text="@string/one_button"
                android:textSize="40sp" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/btn_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:width="88dp"
                android:height="88dp"
                android:background="@drawable/btnnumber"
                android:fontFamily="@font/montserrat"
                android:text="@string/two_button"
                android:textSize="40sp" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/btn_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:width="88dp"
                android:height="88dp"
                android:background="@drawable/btnnumber"
                android:fontFamily="@font/montserrat"
                android:text="@string/three_button"
                android:textSize="40sp" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/btn_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:width="88dp"
                android:height="88dp"
                android:background="@drawable/btnop"
                android:fontFamily="@font/montserrat"
                android:text="@string/plus"
                android:textSize="40sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/btn_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:width="88dp"
                android:height="88dp"
                android:background="@drawable/btnnumber"
                android:fontFamily="@font/montserrat"
                android:text="@string/zero_button"
                android:textSize="40sp" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/btn_decimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:width="88dp"
                android:height="88dp"
                android:background="@drawable/btnnumber"
                android:fontFamily="@font/montserrat"
                android:text="@string/decimal_button"
                android:textSize="40sp" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/btn_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:width="88dp"
                android:height="88dp"
                android:background="@drawable/btnnumber"
                android:fontFamily="@font/montserrat"
                android:text="@string/answer_button"
                android:textSize="25sp" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/btn_solve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:width="88dp"
                android:height="88dp"
                android:background="@drawable/btnop"
                android:fontFamily="@font/montserrat"
                android:text="@string/equals"
                android:textSize="40sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>